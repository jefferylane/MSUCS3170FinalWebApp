<%= form_with(model: @three_d_file, local: true, html: { class: 'form-horizontal', aria: { label: 'Edit 3D File Form' } }) do |form| %>
  <% if @three_d_file.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" aria-live="assertive">
      <h2><%= pluralize(@three_d_file.errors.count, "error") %> prohibited this 3D file from being saved:</h2>
      <ul>
        <% @three_d_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'control-label col-sm-2', aria: { label: 'Name' } %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', aria: { label: 'Name Input' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :file, class: 'control-label col-sm-2', aria: { label: 'File' } %>
    <div class="col-sm-10">
      <%= form.file_field :file, class: 'form-control', aria: { label: 'File Input' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'control-label col-sm-2', aria: { label: 'Description' } %>
    <div class="col-sm-10 mb-4">
      <%= form.text_area :description, class: 'form-control', aria: { label: 'Description Input' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Update 3D file', class: 'btn btn-primary', aria: { label: 'Update 3D File' } %>
    </div>
  </div>
<% end %>