<h1>Edit Profile</h1>

<%= form_with(model: @user, url: profile_path, local: true, html: { class: 'form-horizontal', aria: { label: 'Edit Profile Form' } }) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" aria-live="assertive">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :email, class: 'control-label col-sm-2', aria: { label: 'Email' } %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: 'form-control', aria: { label: 'Email Input' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :username, class: 'control-label col-sm-2', aria: { label: 'Username' } %>
    <div class="col-sm-10">
      <%= form.text_field :username, class: 'form-control', aria: { label: 'Username Input' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :bio, class: 'control-label col-sm-2', aria: { label: 'Bio' } %>
    <div class="col-sm-10">
      <%= form.text_area :bio, class: 'form-control', aria: { label: 'Bio Input' } %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :avatar, class: 'control-label col-sm-2', aria: { label: 'Avatar' } %>
    <div class="col-sm-10 mb-4">
      <%= form.file_field :avatar, class: 'form-control', aria: { label: 'Avatar Input' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit 'Update Profile', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>