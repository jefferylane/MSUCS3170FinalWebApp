<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @user.avatar.attached? %>
        <div class="d-flex justify-content-center align-items-center mb-3">
          <%= image_tag @user.avatar, class: "card-img-top avatar-img" %>
        </div>
      <% end %>
      <div class="card-body">
        <h5 class="card-title text-center"><%= @user.username %></h5>
        <p class="card-text">
          <%= @user.bio %>
        </p>
        <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary', aria: { label: 'Edit Profile' } %>
      </div>
    </div>

    <div class="col-md-8">
      <h2>My 3D Files</h2>
      <div class="row">
        <% @three_d_files.each do |file| %>
          <div class="col-md-6 mb-4">
            <div class="card" aria-label="3D File Card">
              <div 
                data-controller="three-d-preview"
                data-three-d-preview-url-value="<%= rails_blob_path(file.file) %>"
                data-three-d-preview-container-id-value="preview-<%= file.id %>"
                class="preview-container" 
                id="preview-<%= file.id %>" 
                style="height: 200px;"
                aria-label="3D Preview Container">
              </div>
              <div class="card-body">
                <h5 class="card-title"><%= file.name %></h5>
                <p class="card-text">
                  Uploaded: <%= file.created_at.strftime("%B %d, %Y") %>
                </p>
                <div class="btn-group" role="group" aria-label="File Actions">
                  <%= link_to 'View', three_d_file_path(file), class: 'btn btn-primary', aria: { label: 'View 3D File' } %>
                  <%= link_to 'Edit', edit_three_d_file_path(file), class: 'btn btn-secondary', aria: { label: 'Edit 3D File' } %>
                  <%= button_to 'Delete', three_d_file_path(file), 
                      method: :delete, 
                      class: 'btn btn-danger',
                      data: { confirm: 'Are you sure?' },
                      aria: { label: 'Delete 3D File' } %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>